{
    // Place your snippets for cpp here. Each snippet is defined under a snippet name and has a prefix, body and
    // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
    // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
    // same ids are connected.
    // Example:
    // "Print to console": {
    // 	"prefix": "log",
    // 	"body": [
    // 		"console.log('$1');",
    // 		"$2"
    // 	],
    // 	"description": "Log output to console"
    // }
    "Input one integer value": {
        "prefix": "sf1",
        "body": ["scanf(\"%d\", &$1);"],
        "description": "scanf one integer value"
    },
    "Input two integer value": {
        "prefix": "sf2",
        "body": ["scanf(\"%d %d\", &$1, &$2);"],
        "description": "scanf two integer value"
    },
    "Input three integer value": {
        "prefix": "sf3",
        "body": ["scanf(\"%d %d %d\", &$1, &$2, &$3);"],
        "description": "scanf three integer value"
    },
    "Print one integer value to console": {
        "prefix": "pf1",
        "body": ["printf(\"%d\\\\n\", $1);"],
        "description": "Print one integer value to console"
    },
    "Print two integer value to console": {
        "prefix": "pf2",
        "body": ["printf(\"%d %d\\\\n\", $1, $2);"],
        "description": "Print two integer value to console"
    },
    "Print three integer value to console": {
        "prefix": "pf3",
        "body": ["printf(\"%d %d %d\\\\n\", $1, $2, $3);"],
        "description": "Print three integer value to console"
    },
    "Clear all array items to 0": {
        "prefix": "clear",
        "body": ["memset($1, 0, sizeof($1));"],
        "description": "Clear all array items to 0"
    },
    "for loop zero based": {
        "prefix": "for0",
        "body": ["for ($1 $2 = 0; $2 < $3; ++$2) {\n\t$4\n}"],
        "description": "for loop zero based"
    },
    "for loop one based": {
        "prefix": "for1",
        "body": ["for ($1 $2 = 1; $2 <= $3; ++$2) {\n\t$4\n}"],
        "description": "for loop one based"
    },
}
